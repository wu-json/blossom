{
  "name": "blossom",
  "module": "src/index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun run css:watch & bun --hot src/index.ts",
    "css": "bunx @tailwindcss/cli -i ./src/index.css -o ./src/output.css",
    "css:watch": "bunx @tailwindcss/cli -i ./src/index.css -o ./src/output.css --watch",
    "build": "bun run css && bun build --compile src/index.ts --outfile blossom",
    "format": "oxfmt",
    "format:check": "oxfmt --check"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "oxfmt": "^0.17.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.561.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18",
    "zustand": "^5.0.9"
  }
}
